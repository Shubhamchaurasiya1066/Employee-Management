<html>

<head>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/javascripts/project.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
        crossorigin="anonymous"></script>
</head>
<form action="/employee/edit_delete_display" >
    <div class="maincontainer">
        <div class="box">
            <div class="headingbox">
                <img src="/images/hero.png" style="width: 25px;margin-right: 5px;">
                <div style="display: flex;flex-direction: column;">
                    <div style="font-size: 16px; font-weight:bold;color: #130f40;"> Employee Interface</div>
                    <div style="font-size: 12px;font-weight: 700;color: #686de0;">Add new Employee</div>
                </div>

            </div>
            <hr color="#130f40" style="width: 98%;">
            <div class="container" style="width: 98%;">
                <div class="row">
                    <div class="col-6">
                        <input type="text" class="form-control" required 
                             placeholder="Employee Id" name="employee_id">
                    </div>
                    <div class="col-6" style="display: flex; justify-content: center; align-items: center;">
                        <button type="submit" class="btn btn-primary" style="width: 100px;">Search</button>
                    </div>
                </div>
                 <div class="row">
                    <div class="col-12" style="display: flex; justify-content:center;">

                        <font color=<%=color %>>
                            <%=message %>
                        </font>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

</html>